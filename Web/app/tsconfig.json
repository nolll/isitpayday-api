{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "noImplicitAny": true,
        "baseUrl": "./scripts/",
        "paths": {
            "@/*": [
                "*"
            ]
        }
    },
    "typeRoots": [
        "./node_modules/@types"
    ],
    "include": [
        "./scripts/*.ts",
        "./scripts/**/*.ts",
        "./scripts/*.vue",
        "./scripts/**/*.vue",
        "./global-shim.d.ts",
    ],
    "exclude": [
        "node_modules"
    ],
    "lib": [
        "dom",
        "dom.iterable",
        "scripthost",
        "es2015"
    ]
}